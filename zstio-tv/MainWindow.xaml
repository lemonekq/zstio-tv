<Window x:Class="zstio_tv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zstio_tv"
        mc:Ignorable="d"
        Title="zstio-tv" Loaded="WindowLoaded" Height="768" Width="1366" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="Black">
        <Grid x:Name="handler" Height="768" Width="1366" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0,0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FF070707"/>
                    <GradientStop Color="#FF0B0101" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="handler_scale" ScaleY="1" ScaleX="1"/>
                </TransformGroup>
            </Grid.RenderTransform>

            <Grid x:Name="handler_bar" Width="300" HorizontalAlignment="Left">
                <Rectangle x:Name="handler_bar_background" Stroke="#FF1E1E1E" Fill="#FF0A0303"/>
                <StackPanel Margin="0,50,0,0">
                    <TextBlock x:Name="handler_bar_clock" Height="80" FontFamily="/Font/InterBold/#Inter" Text="00:00" Foreground="White" TextAlignment="Center" FontSize="75" VerticalAlignment="Top"/>
                    <TextBlock x:Name="handler_bar_date" Height="25" FontFamily="/Font/InterBold/#Inter" Text="20 Września - Środa" Foreground="White" TextAlignment="Center" FontSize="15" VerticalAlignment="Top" Margin="0,10,0,0"/>
                </StackPanel>
                <Grid x:Name="handler_bar_zstiofm" Height="100" VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="180" Margin="20,20,0,0">
                            <StackPanel>
                                <Label FontFamily="/Font/InterBold/#Inter" Foreground="White" FontSize="20" Content="Anyżowe żelki"/>
                                <Label FontFamily="/Font/InterBold/#Inter" Foreground="White" FontSize="15" Content="chivas" Opacity="0.75" Margin="0,-7.5,0,0"/>
                            </StackPanel>
                        </Grid>
                        <Grid Width="96">
                            <Image Source="/Resources/zstiofm.png" Height="48" Width="48"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
